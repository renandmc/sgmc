{% extends 'admin/index.html.twig' %}
{% block main %}
    <h1>Setores</h1>
    <a href="{{ path('admin_setores_novo') }}" class="btn btn-sm btn-primary">Novo</a>
    <hr>
    {% if setores|length > 0 %}
        <table class="table table-responsive">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Foto</th>
                <th>Ações</th>
            </tr>
            {% for setor in setores %}
                <tr>
                    <td>{{ setor.id }}</td>
                    <td>{{ setor.nome }}</td>
                    <td><img src="{{ vich_uploader_asset(setor, 'imageFile') }}" alt="{{ setor.nome }}" class="img-responsive foto-table"></td>
                    <td>
                        <a href="{{ path('admin_setores_info', { 'id' : setor.id }) }}" class="btn btn-sm btn-default">Info</a>
                        <a href="{{ path('admin_setores_editar', { 'id' : setor.id }) }}" class="btn btn-sm btn-warning">Editar</a>
                        <a href="{{ path('admin_setores_excluir', { 'id' : setor.id }) }}" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <h2>Nenhum setor cadastrado</h2>
    {% endif %}
{% endblock %}