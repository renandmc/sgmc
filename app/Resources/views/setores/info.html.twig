{% extends 'admin/index.html.twig' %}
{% block main %}
    <h1>
        <a href="{{ path('admin_setores_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span>
        </a>
        Info setor
    </h1>
    <hr>
    <div class="row">
        <div class="col-xs-6">
            <h3>Nome: {{ setor.nome }}</h3>
        </div>
        <div class="col-xs-6">
            <img src="{{ vich_uploader_asset(setor, 'imageFile') }}" alt="{{ setor.nome }}" class="img-responsive foto">
        </div>
    </div>
    <a href="{{ path('admin_setores_editar', { 'id': setor.id }) }}" class="btn btn-warning">Editar</a>
    <a href="{{ path('admin_setores_excluir', { 'id': setor.id }) }}" class="btn btn-danger">Excluir</a>
    <hr>
    <h2>Equipamentos</h2>
    <table class="table table-responsive">
        <tr>
            <th>ID</th>
            <th>Tipo equipamento</th>
            <th>Marca</th>
            <th>Modelo</th>
        </tr>
        {% for equip in setor.equipamentos %}
            <tr>
                <td>{{ equip.id }}</td>
                <td>{{ equip.tipoEquipamento }}</td>
                <td>{{ equip.marca }}</td>
                <td>{{ equip.modelo }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}