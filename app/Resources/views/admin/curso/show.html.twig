{% extends 'base.html.twig' %}

{% block body %}
    <h1>Curso</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ curso.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ curso.nome }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ curso.descricao }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_cursos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_cursos_edit', { 'id': curso.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
