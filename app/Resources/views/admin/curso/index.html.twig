{% extends 'admin/index.html.twig' %}
{% block main %}
    <h1>Cursos</h1>
    <a href="{{ path('admin_cursos_novo') }}" class="btn btn-sm btn-primary">Novo</a>
    <hr>
    <table class="table table-responsive">
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Opções</th>
        </tr>
        {% for curso in cursos %}
            <tr>
                <td>{{ curso.nome }}</td>
                <td>{{ curso.descricao }}</td>
                <td>
                    <a href="{{ path('admin_cursos_info', { 'id': curso.id }) }}" class="btn btn-sm btn-default">Info</a>
                    <a href="{{ path('admin_cursos_editar', { 'id': curso.id }) }}" class="btn btn-sm btn-warning">Editar</a>
                    <a href="{{ path('admin_cursos_excluir', { 'id': curso.id }) }}" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}